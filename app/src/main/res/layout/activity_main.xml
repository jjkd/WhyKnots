<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rope"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scaleType="centerCrop"

    tools:context="com.example.jjkd.whyknots.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="invokeButton"
                android:text="@string/button_instructions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="invokeButton1"
                    android:text="@string/square_knot" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="invokeButton1"
                    android:text="@string/square_knot"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="invokeButton2"
                    android:text="@string/two_half_hitches" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="invokeButton2"
                    android:text="@string/two_half_hitches"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="invokeButton3"
                    android:text="@string/timber_hitch" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="invokeButton3"
                    android:text="@string/timber_hitch"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="invokeButton4"
                    android:text="@string/bowline" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="invokeButton4"
                    android:text="@string/bowline"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="invokeButton5"
                    android:text="@string/taut_line_hitch" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="invokeButton5"
                    android:text="@string/taut_line_hitch"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="invokeButton6"
                    android:text="@string/clove_hitch" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="invokeButton6"
                    android:text="@string/clove_hitch"
                    android:textSize="10sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
